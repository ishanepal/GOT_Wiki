<resources>

    <style name="AppTheme.Fantasy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/colorAccentIce</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>

        <item name="colorSurface">@color/colorCardSurface</item>
        <item name="colorOnSurface">@color/colorTextLight</item>

        <item name="colorPrimary">@color/colorBackgroundDark</item>
        <item name="colorOnPrimary">@color/colorTextLight</item>
        <item name="colorSecondary">@color/colorGoldAccent</item>
        <item name="colorOnSecondary">@color/colorBackgroundDark</item>

        <item name="android:fontFamily">@font/font_family</item>

        <item name="materialCardViewStyle">@style/Widget.App.Card.Fantasy</item>
    </style>

    <style name="Widget.App.Card.Fantasy" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAccentDragonGlass</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
    </style>
</resources>